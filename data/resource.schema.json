{
  "$id": "https://raw.githubusercontent.com/wingechr/datatools/main/data/resource.schema.json#",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [],
  "title": "Resource",
  "properties": {
    "$schema": {
      "options": {
        "hidden": true
      },
      "type": "string",
      "format": "uri",
      "const": "https://raw.githubusercontent.com/wingechr/datatools/main/data/resource.schema.json#"
    },
    "name": {
      "rdf": "dct:title",
      "description": "An identifier string.",
      "options": {
        "placeholder": "identifier-string"
      },
      "pattern": "^([-a-z0-9._/])+$",
      "title": "Name",
      "type": "string"
    },
    "description": {
      "description": "A long form description of the resource.",
      "rdf": "dct:description",
      "format": "textarea",
      "title": "Description",
      "type": "string"
    },
    "bytes": {
      "description": "The size of this resource in bytes.",
      "options": {
        "hidden": true
      },
      "title": "Bytes",
      "type": "integer"
    },
    "hash": {
      "options": {
        "hidden": true,
        "placeholder": "e.g. sah256:ff6356d556d75sd656df5676s6dfsdf"
      },
      "pattern": "^[^:]+:[a-fA-F0-9]+$",
      "title": "Hash",
      "type": "string"
    },
    "encoding": {
      "default": "utf-8",
      "typeInfo": "https://en.wikipedia.org/wiki/Popularity_of_text_encodings",
      "description": "The file text encoding of this resource.",
      "examples": ["utf-8"],
      "options": {
        "autocomplete": ["utf-8", "iso-8859-1", "windows-1251"]
      },
      "title": "Encoding",
      "type": "string"
    },
    "mediatype": {
      "typeInfo": "https://www.iana.org/assignments/media-types/media-types.xhtml",
      "description": "The media type of this resource",
      "examples": ["text/csv", "application/json"],
      "options": {
        "autocomplete": [
          "text/csv",
          "application/json",
          "application/geo+json",
          "application/pdf",
          "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
          "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
          "application/vnd.shp",
          "application/vnd.opengeospatial.geopackage+sqlite3"
        ]
      },
      "pattern": "^(.+)/(.+)$",
      "title": "Media Type",
      "type": "string"
    },
    "language": {
      "typeInfo": "IETF (BCP47)",
      "description": "Language code used within the resource.",
      "type": "string",
      "rdf": "dct:language",
      "options": {
        "placeholder": "e.g. en-US",
        "autocomplete": ["en", "en-US", "de", "de-DE", "fr", "fr-FR"]
      },
      "examples": ["en", "en-US", "de", "de-DE", "fr", "fr-FR"],
      "title": "Language"
    },
    "keywords": {
      "description": "An array of string keywords to assist users searching for the resource.",
      "type": "array",
      "uniqueItems": true,
      "format": "table",
      "items": {
        "type": "string",
        "rdf": "dcat:keyword",
        "maxLength": 32,
        "title": "Keyword",
        "examples": ["example"]
      },
      "title": "Keyword"
    },
    "license": {
      "description": "The license under which the resource is published",
      "typeInfo": "SPDX",
      "type": "string",
      "title": "License",
      "examples": ["CC-BY-4.0"],
      "options": {
        "placeholder": "e.g. CC-BY-4.0",
        "autocomplete": [
          "CC-BY-4.0",
          "Creative Commons Attribution 4.0 International",
          "ODbL-1.0",
          "Open Data Commons Open Database License v1.0",
          "ODC-By-1.0",
          "Open Data Commons Attribution License v1.0",
          "CC0-1.0",
          "Creative Commons Zero v1.0 Universal"
        ]
      }
    },
    "attribution": {
      "description": "How to attribute usage of this resource.",
      "options": {
        "placeholder": "e.g. @ Ã–ko-Institut"
      },
      "type": "string",
      "title": "Attribution"
    },
    "publicationDate": {
      "type": "string",
      "title": "Publication date",
      "description": "Date of publication / creation of the resource.",
      "format": "date",
      "examples": ["2023-12-04"]
    },
    "spatial": {
      "type": "object",
      "format": "grid",
      "properties": {
        "extent": {
          "description": "Covered area. May be the name of a region, or the geometry of a bounding box.",
          "type": "string",
          "title": "Extent",
          "rdf": "dct:spatial",
          "examples": ["Germany", "Europe"],
          "options": {
            "placeholder": "e.g. Europe",
            "autocomplete": ["World", "Europe", "Germany"]
          }
        },
        "resolution": {
          "description": "Raster size or administrative level or other nomenclature of smallest unit",
          "type": "string",
          "title": "Resolution",
          "examples": ["100m", "NUTS-2", "country"],
          "options": {
            "placeholder": "e.g. 100m",
            "autocomplete": [
              "100m",
              "NUTS-1",
              "NUTS-2",
              "NUTS-3",
              "country",
              "municipality"
            ]
          }
        },
        "referenceDate": {
          "type": "string",
          "title": "Reference date",
          "description": "Reference date for the validity of the geo data",
          "format": "date",
          "examples": ["2023-12-04"]
        },
        "referenceSystem": {
          "type": "string",
          "title": "Coordinate Reference System",
          "description": "Coordinate reference system of the geo data",
          "options": {
            "placeholder": "e.g. EPSG:4326",
            "autocomplete": [
              "EPSG:4326",
              "EPSG:3035",
              "EPSG:3035",
              "WGS 1984",
              "EPSG:3857",
              "Mercator"
            ]
          }
        }
      },
      "title": "Spatial Coverage"
    },
    "temporal": {
      "type": "object",
      "format": "grid",
      "properties": {
        "extent": {
          "description": "Time period covered in the data",
          "type": "string",
          "title": "Extent",
          "rdf": "dct:temporal",
          "options": {
            "placeholder": "e.g. 1990-2020"
          }
        },
        "resolution": {
          "description": "In case of a time series: temporal resolution of data points",
          "type": "string",
          "rdf": "dcat:temporalResolution",
          "title": "Resolution",
          "options": {
            "placeholder": "e.g. 1h"
          }
        }
      },
      "additionalProperties": false,
      "title": "Temporal coverage"
    },
    "sources": {
      "description": "List of sources used to create this resource",
      "type": "array",
      "uniqueItems": true,
      "format": "table",
      "items": {
        "description": "Source object in list of source objects. Each object has all name-value-pairs.",
        "type": "object",
        "rdf": "dct:source",
        "properties": {
          "name": {
            "type": "string",
            "title": "Title",
            "examples": []
          },
          "path": {
            "description": "URL to original source.",
            "type": "string",
            "title": "Path",
            "format": "uri",
            "options": {
              "placeholder": "http://example.com"
            }
          },
          "license": {
            "description": "The license under which the source was published",
            "typeInfo": "SPDX",
            "type": "string",
            "title": "License",
            "examples": ["CC-BY-4.0"],
            "options": {
              "placeholder": "e.g. CC-BY-4.0",
              "autocomplete": [
                "CC-BY-4.0",
                "Creative Commons Attribution 4.0 International",
                "ODbL-1.0",
                "Open Data Commons Open Database License v1.0",
                "ODC-By-1.0",
                "Open Data Commons Attribution License v1.0",
                "CC0-1.0",
                "Creative Commons Zero v1.0 Universal"
              ]
            }
          },
          "attribution": {
            "description": "How to attribute usage of this source.",
            "type": "string",
            "title": "Attribution"
          },
          "accessDate": {
            "type": "string",
            "format": "date"
          }
        },
        "additionalProperties": false,
        "title": "Sources"
      },
      "title": "Sources"
    },
    "contributors": {
      "description": "The people or organizations who contributed to this resource.",
      "type": "array",
      "uniqueItems": true,
      "format": "table",
      "items": {
        "description": "A person or organizations who contributed to this data package. Each object refers to one contributor. Every contributor must have a title and property. A path, email, role and organization properties are optional extras.",
        "type": "object",
        "rdf": "dct:contributor",
        "properties": {
          "name": {
            "description": "Name/title of the contributor (name for a person, name or title for an organization)",
            "type": "string",
            "title": "Name",
            "examples": ["John Doe"],
            "options": {
              "placeholder": "e.g. John Doe"
            }
          },
          "email": {
            "description": "E-mail address of the contributor",
            "type": "string",
            "title": "Email",
            "format": "email",
            "examples": ["example@example.org"],
            "options": {
              "placeholder": "example@example.org"
            }
          },
          "date": {
            "typeInfo": "ISO 8601",
            "description": "date of the contribution",
            "type": "string",
            "title": "Date",
            "format": "date",
            "examples": ["2023-03-12"]
          }
        },
        "additionalProperties": false,
        "title": "Contributors"
      },
      "title": "Contributors"
    },
    "schema": {
      "description": "A Table Schema for this resource",
      "properties": {
        "fields": {
          "items": {
            "properties": {
              "name": {
                "description": "Field (Column) name",
                "title": "Name",
                "type": "string"
              },
              "description": {
                "title": "Description",
                "type": "string"
              },
              "type": {
                "title": "Data Type",
                "type": "string",
                "options": {
                  "placeholder": "e.g. string",
                  "autocomplete": [
                    "string",
                    "text",
                    "number",
                    "float",
                    "date",
                    "datetime",
                    "boolean"
                  ]
                }
              }
            },
            "required": ["name"],
            "type": "object",
            "additionalProperties": false
          },
          "type": "array",
          "uniqueItems": true,
          "format": "table",
          "additionalProperties": false
        }
      },
      "required": ["fields"],
      "title": "Table Schema",
      "type": "object",
      "additionalProperties": false
    }
  },
  "type": "object",
  "additionalProperties": false
}
